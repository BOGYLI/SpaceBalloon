# SPACE BALLOON CONFIGURATION

# config version (do not touch)
version: 13

# sensor custom I2C bus
bus:
  adc: 7
  co2: 5
  gps: 4
  magnet: 6

# various intervals (timeout in seconds)
interval:
  adc: 1
  climate: 1
  co2: 1
  magnet: 1
  spectral: 1
  system: 1
  photo_offset: 4
  photo_delay: 20
  dm_debug: 10
  dm_aprs: 30
  dm_influx: 3
  cm_debug: 5
  cm_services: 3

# all webcams with their index
webcams:
  0: 0
  1: 2
  2: 4
  3: 6
  4: 8

# webcam default configuration
default:
  live: 0
  video0: 1
  video1: -1
  video2: -1
  offline: 1

# InfluxDB details
influx:
  url: "https://influx.balloon.nikogenia.de"
  org: "makerspace"
  bucket: "balloon"
  token: ""

# Stream details
stream:
  url: "srt://server.balloon.nikogenia.de:8890?streamid=publish:#PATH:#USERNAME:#PASSWORD&pkt_size=1316"
  username: "maker"
  password: ""

# APRS details
aprs:
  src: "DN5WA-11"
  dst: "APRS"
  path: "WIDE1-1,WIDE2-2"

# sensor data, video and remote photo storage
storage:
  sensor:
    default:
      path: "./data/sensor"
  video:
    path: "./data/video"
    backups: []
  remote: "hetzner:System/photo"
