# SPACE BALLOON CONFIGURATION

# config version (do not touch)
version: 12

# sensor custom I2C bus
bus:
  adc: 1
  co2: 5
  gps: 4
  magnet: 6

# read interval (timeout in seconds)
interval:
  adc: 1
  climate: 1
  co2: 1
  magnet: 1
  spectral: 1
  system: 1
  photo: 20

# all webcams with their index
webcams:
  0: 0
  1: 2
  2: 4
  3: 6
  4: 8

# webcam default configuration
default:
  live: 0
  video0: 1
  video1: -1
  video2: -1
  offline: 1

# InfluxDB details
influx:
  url: "https://influx.balloon.nikogenia.de"
  org: "makerspace"
  bucket: "balloon"
  token: ""

# Stream
stream:
  url: "srt://server.balloon.nikogenia.de:8890?streamid=publish:#PATH:#USERNAME:#PASSWORD&pkt_size=1316"
  username: "maker"
  password: ""

# sensor data and video storage
storage:
  sensor:
    default:
      path: "./data/sensor"
  video:
    path: "./data/video"
    backups: []
